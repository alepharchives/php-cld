<package version="2.0">
	<name>cld</name>
    <channel>pecl.php.net</channel>
	<summary>PHP Bindings for Chromium Compact Language Detector</summary>
	<description>Exposes Chromium Compact Language Detector to PHP as CLD\\detect() to find out what language a text is</description>
	<lead>
		<name>Lars Strojny</name>
		<user>lstrojny</user>
		<email>lstrojny@php.net</email>
		<active>yes</active>
	</lead>
	<date>2011-10-30</date>
	<version>
		<release>0.4.0</release>
		<api>0.1</api>
	</version>
	<stability>
		<release>beta</release>
		<api>beta</api>
	</stability>
	<license uri="http://www.opensource.org/licenses/bsd-license.php">BSD License</license>
	<notes>
- New OOP API
- Better error handling
- More tests
	</notes>
	<contents>
		<dir name="/">
			<file name="config.m4" role="src"/>
			<file name="cld.cc" role="src"/>
			<file name="php_cld.h" role="src"/>
            <dir name="tests">
                <file name="cld-detect_basic.phpt" role="test"/>
                <file name="cld-detect_error.phpt" role="test"/>
                <file name="cld-detect_variant1.phpt" role="test"/>
                <file name="cld-reflection-01.phpt" role="test"/>
                <file name="cld-reflection-02.phpt" role="test"/>
                <file name="cld-reflection-03.phpt" role="test"/>
            </dir>
		</dir>
    </contents>
	<dependencies>
		<required>
			<php>
				<min>5.3</min>
			</php>
			<pearinstaller>
				<min>1.4.3</min>
			</pearinstaller>
		</required>
	</dependencies>
    <providesextension>cld</providesextension>
	<extsrcrelease/>
</package>
